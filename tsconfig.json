{
  "compilerOptions": {
    "baseUrl": ".", // 프로젝트의 루트를 기준으로 설정
    "paths": {
      "@/*": ["./*"], // 모든 경로에 대해 '@/'를 사용 가능하게 설정
      "@server/*": ["packages/server/*"], // '@server/'로 'packages/server/' 디렉토리 참조
      "@db/*": ["packages/server/src/db/*"] // '@db/'로 'packages/server/src/db/' 디렉토리 참조
    }
  }
}
